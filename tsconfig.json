{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@connection/*": ["connection/*"],
      "@errors/*": ["errors/*"],
      "@interfaces/*": ["interfaces/*"]
      // "@components/*": ["components/*"],
      // "@pages/*": ["pages/*"],
      // "@utils/*": ["utils/*"],
      // "@theme/*": ["theme/*"],
      // "@connection/*": ["connection/*"],
      // "@errors/*": ["errors/*"],
      // "@interfaces/*": ["interfaces/*"],
      // "@jotai/*": ["jotai/*"],
      // "@language/*": ["language/*"],
      // "@layout/*": ["layout/*"],
      // "@providers/*": ["providers/*"],
      // "@schemes/*": ["schemes/*"],
      // "@types/*": ["types/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
